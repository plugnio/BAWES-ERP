{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "moduleDirectories": ["node_modules", "src"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/../tsconfig.json",
      "isolatedModules": true
    }
  }
}
